{
  "name": "stardew-valley-planner",
  "version": "1.0.0",
  "description": "Stardew Valley seasonal planner",
  "scripts": {
    "start": "vite --host",
    "dev": "npm start",
    "lint": "eslint",
    "test": "vitest",
    "build": "vite build",
    "preview": "vite build && vite preview --host",
    "ci:build": "npm run build",
    "ci:lint": "npm run lint",
    "ci:test": "vitest run --reporter junit --outputFile tests/__temp/test-results.xml",
    "ci:deploy": "firebase deploy --token $FIREBASE_TOKEN"
  },
  "dependencies": {
    "@sentry/browser": "^7.92.0",
    "clsx": "^2.1.0",
    "file-saver": "^2.0.5",
    "firebase": "^10.7.1",
    "immutable": "^5.0.0-beta.4",
    "nanoid": "^5.0.4",
    "solid-js": "^1.8.16"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.5",
    "@testing-library/jest-dom": "^6.2.0",
    "@types/file-saver": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-solid": "^0.13.1",
    "jsdom": "^23.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "sass": "^1.69.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-solid": "^2.8.0",
    "vitest": "^1.1.3",
    "workbox-window": "^7.0.0"
  }
}
